---
import { Image } from '@datocms/astro';
import type { ResponsiveImageFragmentData } from './fragments';
import type { ComponentProps } from 'astro/types';

interface Props extends Omit<ComponentProps<typeof Image>, 'data'> {
  data: ResponsiveImageFragmentData;
}

const { data, ...rest } = Astro.props;
---

{
  /*
    This component is a wrapper for the `<Image />` component provided by
    @datocms/astro. We define the necessary GraphQL fragment for this component
    to function only once, then reuse it wherever needed.
  */
}

<Image {...rest} data={data} />
