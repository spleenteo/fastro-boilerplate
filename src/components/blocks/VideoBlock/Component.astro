---
import { VideoPlayer } from '~/components/VideoPlayer';
import type { VideoBlockFragmentData } from './fragments';

interface Props {
  block: VideoBlockFragmentData & {
    id: string;
    __typename: 'VideoBlockRecord';
  };
}

const { block } = Astro.props;
---

<figure>
  {/* Render the video player component */}
  <VideoPlayer data={block.asset} />
  {/* Display the title of the video asset below the video player */}
  <figcaption>{block.asset.title}</figcaption>
</figure>
