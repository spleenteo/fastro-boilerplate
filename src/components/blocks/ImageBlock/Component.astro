---
import type { ImageBlockFragmentData } from './fragments';
import { ResponsiveImage } from '~/components/ResponsiveImage';

interface Props {
  block: ImageBlockFragmentData & {
    id: string;
    __typename: 'ImageBlockRecord';
  };
}

const { block } = Astro.props;
---

<figure>
  {/* Display responsive image */}
  <ResponsiveImage data={block.asset.responsiveImage} />
  {/* Display image title */}
  <figcaption>{block.asset.title}</figcaption>
</figure>
